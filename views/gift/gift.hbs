{{>head seo='Lista prezentów'}}

    <h1>Lista prezentów</h1>
    <ul class="gifts">
        {{#each gifts}}
            <li class="gifts">
                <span class="name">{{this.name}}:</span> <span> {{this.count}} szt. </span>
               

            </li>
        {{/each}}
    </ul>

<h2>Dodaj prezent</h2>
<form action="/gifts" method="POST">
    <label for="">
        Nazwa:
        <input name="name">
    </label>
    <label for="">
        Ilość:
        <input name="count" type=" " min="1">
        {{#if error}}
        {{>errors}}
        {{/if}}
    </label>
    <button type="submit">Dodaj</button>
</form>